{
  "name": "shop",
  "version": "0.1.0",
  "description": "invoicing management system for my wife's shop",
  "main": "index.js",
  "scripts": {
    "clean": "shx rm -rf dist",
    "test": "jest",
    "lint": "npm run tslint && npm run prettier",
    "tslint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prettier": "prettier --write --single-quote --list-different --tab-width 4 --print-width 180",
    "compile-webserver": "tsc -p src/webserver",
    "copy-res-webserver": "shx cp -R src/cert dist/webserver/webserver && shx cp -R src/webserver/views dist/webserver/webserver && shx cp -R src/webserver/conf dist/webserver/webserver",
    "build-webserver": "npm run compile-webserver && npm run copy-res-webserver",
    "build-site": "tsc -p src/site && node scripts/build-site",
    "build": "npm run clean && npm run build-webserver && npm run build-site",
    "start-webserver": "node dist/webserver/webserver/main.js --server_id 1 --server_port 8888 --database_pass 123456"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gaoyakun/shop.git"
  },
  "author": "gaoyakun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/gaoyakun/shop/issues"
  },
  "homepage": "https://github.com/gaoyakun/shop#readme",
  "dependencies": {
    "@types/body-parser": "^1.17.0",
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.16.1",
    "@types/hiredis": "^0.5.2",
    "@types/ioredis": "^4.0.10",
    "@types/jquery": "^3.3.29",
    "@types/long": "^4.0.0",
    "@types/morgan": "^1.7.35",
    "@types/mysql": "^2.15.6",
    "@types/request": "^2.48.1",
    "body-parser": "^1.19.0",
    "cookie-parser": "^1.4.4",
    "cssnano": "^4.1.10",
    "ejs": "^2.6.1",
    "express": "^4.16.4",
    "express-async-errors": "^3.1.1",
    "hiredis": "^0.5.0",
    "ioredis": "^4.9.0",
    "jquery": "^3.4.1",
    "long": "^4.0.0",
    "morgan": "^1.9.1",
    "mysql": "^2.17.1",
    "postcss-cssnext": "^3.1.0",
    "postcss-nested": "^4.1.2",
    "postcss-simple-vars": "^5.0.2",
    "readline": "^1.3.0",
    "request": "^2.88.0",
    "rollup": "^1.11.3",
    "rollup-plugin-commonjs": "^9.3.4",
    "rollup-plugin-node-resolve": "^4.2.3",
    "rollup-plugin-postcss": "^2.0.3",
    "rollup-plugin-uglify": "^6.0.2",
    "xss": "^1.0.6"
  },
  "devDependencies": {
    "@types/jest": "^24.0.12",
    "@types/node": "^12.0.0",
    "eslint": "^5.16.0",
    "jest": "^24.8.0",
    "prettier": "^1.17.0",
    "shx": "^0.3.2",
    "ts-node": "^8.1.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
